<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BemVindo">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="44dp" android:id="@+id/guideline9"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="685dp"
            android:id="@+id/guideline10"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="31dp" android:id="@+id/guideline11"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="381dp"
            android:id="@+id/guideline12"/>
    <ImageView
            android:layout_width="269dp"
            android:layout_height="488dp" app:srcCompat="@drawable/exemplodeslogan"
            android:id="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline11" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline12" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline9"/>
    <TextView
            android:text="Reciclabito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomejogo" android:textStyle="bold"
            android:textColor="#035F57" android:textSize="36sp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="@+id/guideline9" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"/>
</android.support.constraint.ConstraintLayout>