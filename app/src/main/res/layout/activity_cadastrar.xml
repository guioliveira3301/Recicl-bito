<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cadastrar">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="40dp" android:id="@+id/guideline5"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="685dp" android:id="@+id/guideline6"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="44dp" android:id="@+id/guideline7"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="370dp" android:id="@+id/guideline8"/>
    <TextView
            android:text="cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cadstrando" android:textStyle="bold"
            android:textAlignment="center" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginStart="112dp"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline8" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.074" android:textColor="#11A5B8"/>
    <TextView
            android:text="Nome"
            android:layout_width="54dp"
            android:layout_height="27dp"
            android:id="@+id/cadUser" android:textStyle="bold"
            android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/cadstrando" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="@+id/guideline7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/cadUsuario"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/cadUser"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/cadUser"/>
    <TextView
            android:text="Senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cadSenha" android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/cadUsuario"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="@+id/guideline7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/cadPassword"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/cadSenha" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="@+id/guideline7"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:layout_marginEnd="24dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:textStyle="bold" android:textSize="18sp"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>